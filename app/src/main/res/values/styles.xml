<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDetailActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <style name="TextAppearance.Detail" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#747474</item>
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <style name="Button.Detail.Style" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#747474</item>
        <item name="colorAccent">#86E4DB</item>
    </style>

</resources>
